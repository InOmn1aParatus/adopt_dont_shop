<h1>Admin Portal</h1>
<hr>

<h2>Pending Application</h2>
<h4>Applicant Name: <%= @application.name %></h4>
<p> Address:<br>
  <%= @application.street %><br>
  <%= @application.city %>,
  <%= @application.state %> 
  <%= @application.zip_code %>
</p>
<p>Application Status: <%= @application.status %></p>
<p>Description: <%= @application.description %></p>

<section>
  Pets on this application:
  <% @application.pets.each do |pet| %>
    <p>
      <%= link_to "#{pet.name}", "/pets/#{pet.id}" %>
      <%= button_to 'Approve for Adoption', "/admin/applications/#{@application.id}", result: 'approved', method: :patch %>
    </p>
    <br>
  <% end %>
</section>